<%= form_for @user, :html=>{:multipart => true} do |f| %>

  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being created:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "firstname", "First Name" %><br>
    <%= f.text_field "firstname" %>
  </div>
  <div>
    <%= f.label "lastname", "Last Name" %><br>
    <%= f.text_field "lastname" %>
  </div>
  <div>
    <%= f.label "email", "Email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.label "phone", "Phone" %><br>
    <%= f.text_field "phone" %>
  </div>
  <div>
    <%= f.label :picture, "Profile Picture" %><br>
    <%= f.file_field :picture %> <br>

  </div>
  <div>
    <%= f.label "linkedin", "LinkedIn (optional)" %><br>
    <%= f.text_field "linkedin" %>
  </div>
  <div>
    <%= f.label "password" %><br>
    <%= f.password_field "password" %>
  </div>
  <div>
    <%= f.label "password_confirmation" %><br>
    <%= f.password_field "password_confirmation" %>
  </div>
  <div><%= f.submit "Submit" %></div>
  
<% end %>