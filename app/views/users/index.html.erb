<div class="container">

<% if !current_user %>
  <div class="warning">
    <h1>You don't have a profile! <br>
    Sign up for RideOrbit <%= link_to "here", new_user_path %>.</h1>
  </div>

<% else %>

  <p><%= current_user.picture %>
  <p><%= current_user.firstname %> <%=current_user.lastname %></p>
  <p><%= current_user.email %></p>
  <p><%=current_user.phone %></p>

<% end %>
</div>