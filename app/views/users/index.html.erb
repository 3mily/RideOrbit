<div class="container">
<div class="well">
  
<% if !current_user %>
  <div class="warning">
    <h1>You don't have a profile! <br>
    Sign up for RideOrbit <%= link_to "here", new_user_path %>.</h1>
  </div>

<% else %>
  
  <img class="center-block prof-pic" src="<%=current_user.picture %>">
  <br>
  <p class="text-center"><b>Name:</b> <%= current_user.firstname %> <%=current_user.lastname %></p>
  <p class="text-center"><b>Email:</b> <%= current_user.email %></p>
  <p class="text-center"><b>Phone:</b> <%=current_user.phone %></p>

  <h3>Reviews</h3>
  <% @reviews.each do |review| %>
    <p><%= review.body %></p>
    <p><%= review.rating %></p>
  <% end %>

  <h3>Leave a Review:</h3>
  <%= form_for @review, url: reviews_path do |f| %>
  <%= f.text_area :body, class: "form-control" %>
  <br>
  <p>Rating (out of 5):</p>
  <%= f.select :rating, options_for_select([1,2,3,4,5]), {}, class: "form-control" %>
  <br>
  <br>
  <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>

<% end %>
</div>
</div>